<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".RegistrationPageAct">

    <TextView
        android:id="@+id/registTitle"
        android:gravity="center"
        android:textSize="32sp"
        android:textColor="#000"
        android:fontFamily="sans-serif-condensed-light"
        android:textStyle="bold"
        android:layout_marginTop="85dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registration_page" />


    <EditText
        android:id="@+id/regUsernameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="12dp"
        android:inputType="text"
        android:background="@drawable/bg_edittext_focused"
        android:layout_marginTop="55dp"
        android:hint="@string/new_username"/>

    <EditText
        android:id="@+id/regPasswordEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="12dp"
        android:inputType="textPassword"
        android:background="@drawable/bg_edittext_focused"
        android:layout_marginTop="10dp"
        android:hint="@string/new_password"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/regSignupButton"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_button_design"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:text="@string/sign_up" />

</LinearLayout>